// description at https://exercism.org/tracks/javascript/exercises/poetry-club-door-policy

export function frontDoorResponse(line) {
  return line[0];
}

export function frontDoorPassword(word) {
  const cap = word[0].toUpperCase() + word.substring(1).toLowerCase();
  return cap;
}

export function backDoorResponse(line) {
  const nspc = line.trim();
  return nspc.substr(-1);
}

export function backDoorPassword(word) {
  const cap = word[0].toUpperCase() + word.substring(1).toLowerCase();
  return cap + ', please';

}
